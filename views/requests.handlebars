<h2>View all requests for your donations below!</h2>

{{#each requests}}
<div class="d-inline-flex flex-row p-3">
    <div class="card" style="width: 18rem;">
        {{!-- <img class="card-img-top" src="{{image}}" alt="Card image cap"> --}}
        <div class="card-body">
            <h5 class="card-title">A user has requested {{amount}} of the item you have offered to donate.</h5>
            <button class = "acceptDonation" data-donatorcardid = "{{DonatorCardId}}" data-userid = "{{UserId}}" data-amount = "{{amount}}" data-value = "true">Accept Offer</button>
            <button class = "denyDonation" data-donatorcardid = "{{DonatorCardId}}" data-userid = "{{UserId}}" data-amount = "{{amount}}" data-value = "false">Deny Offer</button>
        </div>
    </div>
</div>
{{/each}}