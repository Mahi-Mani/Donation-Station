{{!-- <h2>View all donations for your requests below!</h2> --}}

{{#each donations}}
<div class="d-inline-flex flex-row p-3">
    <div class="card" style="width: 18rem;">
        {{!-- <img class="card-img-top" src="{{image}}" alt="Card image cap"> --}}
        <div class="card-body">
            <h5 class="card-title">A user has offered to donate {{amount}} of the item you have requested.</h5>
            <button class="acceptDonation" data-donationid="{{id}}" data-value="true">Accept Offer</button>
            <button class="denyDonation" data-donationid="{{id}}" data-value="false">Deny Offer</button>
        </div>
    </div>
</div>
{{/each}}