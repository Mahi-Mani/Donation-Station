<div class="alert alert-info" role="alert">
    <h2>View all donations for your requests below!</h2>
</div>

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        {{#each donations}}
        <div class="d-inline-flex flex-row p-3">
            <div class="card" style="width: 18rem;">
                {{!-- <img class="card-img-top" src="{{image}}" alt="Card image cap"> --}}
                <div class="card-body">
                    <h5 class="card-title">A user has offered to donate {{amount}} of the item you have requested.</h5>
                    <button class="acceptDonation btn btn-info" data-requestorcardid="{{RequestorCardId}}"
                        data-userid="{{UserId}}" data-amount="{{amount}}" data-value="true">Accept</button>
                    <button class="denyDonation btn btn-danger" data-requestorcardid="{{RequestorCardId}}"
                        data-userid="{{UserId}}" data-amount="{{amount}}" data-value="false">Deny</button>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    <div class="col-md-2"></div>
</div>