<h1>Requestors</h1>
<hr>
{{#each requestorCards}}
<div class="d-inline-flex flex-row p-3">
  <div class="card" style="width: 18rem;">
    <img class="card-img-top" src="{{image}}" alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title">{{category}}</h5>
      <h5 class="card-title">{{item}} {{numberneeded}}</h5>
      <p class="card-text">Location: {{location}}</p>
      <a href="#" class="btn btn-primary donate" data-id="{{id}}" data-toggle="modal" data-target="#donateModal">Make
        Donation</a>
    </div>
  </div>
</div>
{{/each}}

<button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#makeRequestModal"><i
    class="fas fa-plus-circle"></i></button>

<div class="modal fade" id="makeRequestModal" role="dialog">
  <div class="modal-dialog">

    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Make a New Request</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="category">Category</label>

            <select id="requestorCardCategory">
              <option value="none">--None--</option>
              <option value="food">Food</option>
              <option value="clothing">Clothing</option>
              <option value="clothing">School Supplies</option>
              <option value="clothing">Household Items</option>
              <option value="clothing">Cleaning Supplies</option>
              <option value="clothing">Misc</option>
            </select>
          </div>
          <div class="form-group">
            <label for="item">Item</label>
            <input type="item" class="form-control" id="requestorCardItem" aria-describedby="emailHelp"
              placeholder="Item you wish to request" data-placement="right" title="Item is required">
          </div>
          <label for="noOfItemsNeeded">Number of Items Needed</label>
          <input type="noOfItemsNeeded" class="form-control" id="requestorCardNumberNeeded" aria-describedby="emailHelp"
            placeholder="Enter number of items you are requesting" data-placement="right"
            title="#Needed is required! Should be a number">
          <div class="form-group">
            <label for="location">Location</label>
            <input type="location" class="form-control" id="requestorCardLocation" aria-describedby="emailHelp"
              placeholder="Your location"data-placement="right"title="Location is required">
          </div>
          <div class="form-group">
            <label for="location">Priority</label>
            <select id="requestorCardPriority">
              <option value="false">No</option>
              <option value="true">Yes</option>
            </select>
          </div>
          <div class="form-group">
            <label for="image">Image</label>
            <input type="text" class="form-control" id="requestorCardImage" aria-describedby="emailHelp"
              placeholder="Optional image of items you wish to donate">
          </div>

        </form>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-primary" id="addRequestorCard">Submit</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal" id="modal-close">Close</button>
      </div>
    </div>

  </div>
</div>

<div class="modal fade" id="donateModal" role="dialog">
  <div class="modal-dialog">

    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Offer Donation</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="donation">How much of this item are you able to donate?</label>
            <input type="integer" class="form-control" id="offerDonationNumber" aria-describedby="emailHelp"
              placeholder="#">
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-primary" id="offerDonation" data-dismiss="modal">Offer
          Donation</button>
      </div>
    </div>

  </div>
</div>
<br><br>
{{!-- End Requestor card --}}



{{!-- Donator card --}}
<h1>Donators</h1>
<hr>
{{#each result}}
<div class="d-inline-flex flex-row p-3">
  <div class="card" style="width: 18rem;">
    <img class="card-img-top" src="{{image}}" alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title">{{category}}</h5>
      <h5 class="card-title">{{item}} {{itemnumber}}</h5>
      <p class="card-text">Location: {{location}}</p>
      <p class="card-text">Available Until: {{enddate}}</p>
      <button class="btn btn-success" id="requestDonation" data-id={{id}}>Request Donation</button>
    </div>
  </div>
</div>
{{/each}}
{{!-- Button to add a new card --}}
<button class="btn btn-info btn-lg" id="add-btn"><i class="fas fa-plus-circle"></i></button>
{{!-- Modal --}}

<div class="modal" tabindex="-1" role="dialog" id="add-modal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Donation Form</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <!-- Form -->
        <form data-toggle="validator" role="form" id="myForm">
          <div class="form-group">
            <label for="sdate">Start Date</label>
            <input type="sdate" class="form-control" id="input-sdate" aria-describedby="emailHelp"
              placeholder="Enter start Date" name="sdate" data-placement="right"
              title="Start Date is required! Format mm/dd/yyyy">
          </div>
          <div class="form-group">
            <label for="edate">End Date</label>
            <input type="edate" class="form-control" id="input-edate" aria-describedby="emailHelp"
              placeholder="Enter End Date" name="'edate'" data-placement="right"
              title="End Date is required! Format mm/dd/yyyy">
          </div>
          <div class="form-group">
            <label for="edate">Category</label>

            <select id="dropdown-category" name="category">
              <option value="none">--None--</option>
              <option value="food">Food</option>
              <option value="clothing">Clothing</option>
              <option value="clothing">School Supplies</option>
              <option value="clothing">Household Items</option>
              <option value="clothing">Cleaning Supplies</option>
              <option value="clothing">Misc</option>
            </select>
          </div>
          <div class="form-group">
            <label for="item">Item</label>
            <input type="item" class="form-control" id="input-item" aria-describedby="emailHelp"
              placeholder="Item you wish to Donate" name="item" data-placement="right" title="Item is required">
          </div>
          <label for="noOfItems">Number of Items</label>
          <input type="noOfItems" class="form-control" id="input-noOfItems" aria-describedby="emailHelp"
            placeholder="Enter number of items you wish to donate" name="noOfItems" data-placement="right"
            title="#Items is required! Should be a number">
          <div class="form-group">
            <label for="location">Location</label>
            <input type="text" class="form-control" id="input-location" aria-describedby="emailHelp"
              placeholder="Your location" name="location" data-placement="right" title="Location is required">
          </div>
          <div class="form-group">
            <label for="image">Image</label>
            <input type="text" class="form-control" id="input-image" aria-describedby="emailHelp"
              placeholder="Optional image of items you wish to donate" name="image">
          </div>

          <button type="submit" class="btn btn-primary" id="submit-btn">Submit</button>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal" id="modal-close">Close</button>
      </div>
    </div>
  </div>
</div>

