{{!-- Requestor Cards --}}
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <a class="btn btn-primary btn-lg" data-toggle="collapse" href="#viewYourRequests" role="button"
            aria-expanded="false" aria-controls="viewRequests">
            Your Requests
        </a>
    </div>
    <div class="col-md-2"></div>
</div>

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        {{#each requestorCards}}
        <div class="d-inline-flex flex-row p-3">
            <div class="card collapse" style="width: 18rem;" id="viewYourRequests">
                <img class="card-img-top" src="{{image}}" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">{{category}}</h5>
                    <h5 class="card-title">{{item}} {{numberneeded}}</h5>
                    <p class="card-text">Location: {{location}}</p>
                    <button class="btn viewDonations" data-id="{{id}}">View Donations</button>
                    <button class="btn btn-danger deleteRequestorCard" data-id="{{id}}">Delete</button>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    <div class="col-md-2"></div>
</div>

