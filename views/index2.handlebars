<h1>Your Donator Cards</h1>
{{!-- Donator cards --}}
{{#each result}}
<div class="d-inline-flex flex-row p-3">
    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="{{image}}" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">{{category}}</h5>
            <h5 class="card-title">{{item}} {{itemnumber}}</h5>
            <p class="card-text">Location: {{location}}</p>
            <p class="card-text">Available Until: {{enddate}}</p>
            <button class="btn viewRequests" data-id="{{id}}">View Donations</button>
            <button class="btn btn-danger deleteDonatorCard" data-id={{id}}>Delete</button>
        </div>
    </div>
</div>
{{/each}}